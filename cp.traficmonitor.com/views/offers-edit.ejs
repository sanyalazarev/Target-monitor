<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">&times;</button>
	<h4 class="modal-title">Edit offer</h4>
</div>
<div class="form-horizontal">
	<div class="modal-body">
		<input type="hidden" name="offerId" value="<%= offer.id %>" id="offerId" class="form-control">
		<div class="form-group">
			<label for="name" class="col-sm-3 control-label">Name</label>
			<div class="col-sm-9"><input type="text" name="name" value="<%= offer.name %>" id="name" class="form-control" data-validation-engine="validate[required]"></div>
		</div>
		<div class="form-group">
			<label for="description" class="col-sm-3 control-label">Description</label>
			<div class="col-sm-9"><input type="text" name="description" value="<%= offer.description %>" id="description" class="form-control" data-validation-engine="validate[required]"></div>
		</div>
		<div class="form-group">
			<label for="url" class="col-sm-3 control-label">URL</label>
			<div class="col-sm-9">
				<input type="text" name="url" value="<%= offer.url %>" id="url" class="form-control" data-validation-engine="validate[required]">
				<small><b>Available variables:</b> {click_id}, {affiliate_id}</small>
			</div>
		</div>
		<div class="form-group">
			<label for="countries" class="col-sm-3 control-label">Permitted countries</label>
			<div class="col-sm-9">
				<select name="countries" class="form-control chosen-select" multiple>
					<% for(var i=0; i<countries.length; i++) { %>
					<option value="<%= countries[i].id %>" <%= permittedCountries.indexOf(countries[i].id.toString()) != "-1" ? 'selected' : '' %>><%= countries[i].name %></option>
					<% } %>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="offerId" class="col-sm-3 control-label">Tracking domains</label>
			<div class="col-sm-5">
				<select name="domainId" class="form-control">
					<option value="0">--- Select ---</option>
					<% for(let i=0; i<domains.length; i++){ %>
					<option value="<%= domains[i].id %>" <%= domains[i].id == offer.domainId ? 'selected' : '' %>><%= domains[i].domain %></option>
					<% } %>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label">Public</label>
			<div class="col-sm-9">
				<div class="btn-group" data-toggle="buttons">
					<label class="btn btn-primary <%= offer.public ? 'active' : '' %>"><input type="radio" name="public" value="1" autocomplete="off" <%= offer.public ? 'checked=""' : '' %>> Yes</label>
					<label class="btn btn-primary <%= !offer.public ? 'active' : '' %>"><input type="radio" name="public" value="0" autocomplete="off" <%= !offer.public ? 'checked=""' : '' %>> No</label>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label">Active</label>
			<div class="col-sm-9">
				<div class="btn-group" data-toggle="buttons">
					<label class="btn btn-primary <%= offer.active ? 'active' : '' %>"><input type="radio" name="active" value="1" autocomplete="off" <%= offer.active ? 'checked=""' : '' %>> Yes</label>
					<label class="btn btn-primary <%= !offer.active ? 'active' : '' %>"><input type="radio" name="active" value="0" autocomplete="off" <%= !offer.active ? 'checked=""' : '' %>> No</label>
				</div>
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-default edit-offer">Edit</button>
		<button type="button" class="btn" data-dismiss="modal">Cancel</button>
	</div>
</div>