<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">&times;</button>
	<h4 class="modal-title">Add tracking domains</h4>
</div>
<div class="form-horizontal">
	<div class="modal-body">
		<div class="form-group">
			<label for="domain" class="col-sm-3 control-label">Domain</label>
			<div class="col-sm-9"><input type="text" name="domain" value="" id="domain" class="form-control" data-validation-engine="validate[required]"></div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-success add-domain">Add</button>
		<button type="button" class="btn" data-dismiss="modal">Cancel</button>
	</div>
</div>