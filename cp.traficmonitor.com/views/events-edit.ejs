<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">&times;</button>
	<h4 class="modal-title">Edit goal</h4>
</div>
<div class="form-horizontal">
	<div class="modal-body">
		<input type="hidden" name="eventId" value="<%= event.id %>" id="eventId" class="form-control">
		
		<div class="form-group">
			<label for="name" class="col-sm-3 control-label">Name</label>
			<div class="col-sm-9"><input type="text" name="name" value="<%= event.name %>" id="name" class="form-control" data-validation-engine="validate[required]"></div>
		</div>
		<div class="form-group">
			<label for="price" class="col-sm-3 control-label">Price</label>
			<div class="col-sm-3"><input type="text" name="price" value="<%= event.price %>" id="price" class="form-control" data-validation-engine="validate[required]"></div>
		</div>
		<div class="form-group">
			<label for="percent" class="col-sm-3 control-label">Percentage</label>
			<div class="col-sm-3"><input type="text" name="percent" value="<%= event.percent %>" id="percent" class="form-control" data-validation-engine="validate[required]"></div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label">Regular</label>
			<div class="col-sm-9">
				<div class="btn-group" data-toggle="buttons">
					<label class="btn btn-primary <%= event.regular ? 'active' : '' %>"><input type="radio" name="regular" value="1" autocomplete="off" <%= event.regular ? 'checked' : '' %>>Yes</label>
					<label class="btn btn-primary <%= !event.regular ? 'active' : '' %>"><input type="radio" name="regular" value="0" autocomplete="off" <%= !event.regular ? 'checked' : '' %>>No</label>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label">Public</label>
			<div class="col-sm-9">
				<div class="btn-group" data-toggle="buttons">
					<label class="btn btn-primary <%= event.public ? 'active' : '' %>"><input type="radio" name="public" value="1" autocomplete="off" <%= event.public ? 'checked=""' : '' %>> Yes</label>
					<label class="btn btn-primary <%= !event.public ? 'active' : '' %>"><input type="radio" name="public" value="0" autocomplete="off" <%= !event.public ? 'checked=""' : '' %>> No</label>
				</div>
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-default edit-event">Edit</button>
		<button type="button" class="btn" data-dismiss="modal">Cancel</button>
	</div>
</div>