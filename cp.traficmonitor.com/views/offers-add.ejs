<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">&times;</button>
	<h4 class="modal-title">Add offer</h4>
</div>
<div class="form-horizontal">
	<div class="modal-body">
		<div class="form-group">
			<label for="name" class="col-sm-3 control-label">Name</label>
			<div class="col-sm-9"><input type="text" name="name" value="" id="name" class="form-control" data-validation-engine="validate[required]"></div>
		</div>
		<div class="form-group">
			<label for="description" class="col-sm-3 control-label">Description</label>
			<div class="col-sm-9"><input type="text" name="description" value="" id="description" class="form-control" data-validation-engine="validate[required]"></div>
		</div>
		<div class="form-group">
			<label for="url" class="col-sm-3 control-label">URL</label>
			<div class="col-sm-9">
				<input type="text" name="url" value="" id="url" class="form-control" data-validation-engine="validate[required]">
				<small><b>Available variables:</b> {click_id}, {affiliate_id}</small>
			</div>
		</div>
		<div class="form-group">
			<label for="countries" class="col-sm-3 control-label">Permitted countries</label>
			<div class="col-sm-9">
				<select name="countries" class="form-control chosen-select" multiple>
					<% for(var i=0; i<countries.length; i++) { %>
					<option value="<%= countries[i].id %>" <%= ctr.indexOf(countries[i].id) != "-1" ? 'selected' : '' %>><%= countries[i].name %></option>
					<% } %>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="offerId" class="col-sm-3 control-label">Tracking domains</label>
			<div class="col-sm-5">
				<select name="domainId" class="form-control">
					<option value="0">--- Select ---</option>
					<% for(let i=0; i<domains.length; i++){ %>
					<option value="<%= domains[i].id %>"><%= domains[i].domain %></option>
					<% } %>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label">Public</label>
			<div class="col-sm-9">
				<div class="btn-group" data-toggle="buttons">
					<label class="btn btn-primary "><input type="radio" name="public" value="1" autocomplete="off"> Yes</label>
					<label class="btn btn-primary active"><input type="radio" name="public" value="0" autocomplete="off" checked=""> No</label>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label">Active</label>
			<div class="col-sm-9">
				<div class="btn-group" data-toggle="buttons">
					<label class="btn btn-primary "><input type="radio" name="active" value="1" autocomplete="off"> Yes</label>
					<label class="btn btn-primary active"><input type="radio" name="active" value="0" autocomplete="off" checked=""> No</label>
				</div>
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-success add-offer">Add</button>
		<button type="button" class="btn" data-dismiss="modal">Cancel</button>
	</div>
</div>