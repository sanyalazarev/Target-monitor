<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">&times;</button>
	<h4 class="modal-title">Edit offer price</h4>
</div>
<div class="form-horizontal">
	<div class="modal-body">
		<input type="hidden" name="pricingId" value="<%= pricing.id %>" id="eventId" class="form-control">
		
		<div class="form-group">
			<label for="countryId" class="col-sm-3 control-label">Country</label>
			<div class="col-sm-9">
				<select name="countryId" class="form-control chosen-select">
					<% for(var i=0; i<countries.length; i++) { %>
					<option value="<%= countries[i].id %>" <%= countries[i].id == pricing.countryId ? 'selected' : '' %>><%= countries[i].name %></option>
					<% } %>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-3 control-label">Gender</label>
			<div class="col-sm-9">
				<div class="btn-group" data-toggle="buttons">
					<label class="btn btn-primary <%= pricing.gender == 0 ? 'active' : '' %>"><input type="radio" name="gender" value="0" <%= pricing.gender == 0 ? 'checked' : '' %>> All</label>
					<label class="btn btn-primary <%= pricing.gender == 1 ? 'active' : '' %>"><input type="radio" name="gender" value="1" <%= pricing.gender == 1 ? 'checked' : '' %>> Men</label>
					<label class="btn btn-primary <%= pricing.gender == 2 ? 'active' : '' %>"><input type="radio" name="gender" value="2" <%= pricing.gender == 2 ? 'checked' : '' %>> Women</label>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label for="ageFrom" class="col-sm-3 control-label">Age</label>
			<div class="col-sm-3"><input type="text" name="ageFrom" value="<%= pricing.ageFrom %>" id="ageFrom" class="form-control" placeholder="from"></div>
			<div class="col-sm-3"><input type="text" name="ageTo" value="<%= pricing.ageTo %>" id="ageTo" class="form-control" placeholder="to"></div>
		</div>
		<div class="form-group">
			<label for="price" class="col-sm-3 control-label">Price</label>
			<div class="col-sm-3"><input type="text" name="price" value="<%= pricing.price %>" id="price" class="form-control" placeholder="$"></div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-default edit-price">Edit</button>
		<button type="button" class="btn" data-dismiss="modal">Cancel</button>
	</div>
</div>