<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">&times;</button>
	<h4 class="modal-title">Add postback</h4>
</div>
<div class="form-horizontal">
	<div class="modal-body">
		<div class="form-group">
			<label for="event" class="col-sm-3 control-label">Goal</label>
			<div class="col-sm-9">
				<select name="eventId" class="form-control" id="event">
				<% for(var i=0; i<events.length; i++) { %>
				<option value="<%= events[i].id %>"><%= events[i].advertiser %> / <%= events[i].name %>(<%= events[i].price %>$)</option>
				<% } %>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="name" class="col-sm-3 control-label">Name</label>
			<div class="col-sm-9"><input type="text" name="name" value="" id="name" class="form-control"></div>
		</div>
		<div class="form-group">
			<label for="url" class="col-sm-3 control-label">URL</label>
			<div class="col-sm-9"><input type="text" name="url" value="" id="url" class="form-control"></div>
		</div>
		<div class="form-group">
			<label for="dailyLimit" class="col-sm-3 control-label">Daily cap</label>
			<div class="col-sm-3"><input type="text" name="dailyLimit" value="" id="dailyLimit" class="form-control"></div>
		</div>
		<div class="form-group">
			<label for="url" class="col-sm-3 control-label">Method</label>
			<div class="col-sm-9">
				<div class="btn-group" data-toggle="buttons">
					<label class="btn btn-primary active"><input type="radio" name="method" value="GET" autocomplete="off" checked>GET</label>
					<label class="btn btn-primary"><input type="radio" name="method" value="POST" autocomplete="off">POST</label>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label for="query" class="col-sm-3 control-label">Query string</label>
			<div class="col-sm-9">
				<textarea name="query" rows="3" id="query" class="form-control">cid={clickId}&ip={ip}&country={country}</textarea>
				<small>
					<b>Available variables:</b><br>
					{click_id}, {person_id}, {creative}, {subaffiliate}, {ip}, {country}, {payout}, {a1} ... {a5}, {b1} ... {b5}
				</small>
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-success add-postback">Add</button>
		<button type="button" class="btn" data-dismiss="modal">Cancel</button>
	</div>
</div>