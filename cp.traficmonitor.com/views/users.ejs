<%- include('header') %>

<div id="list">
	<div class="row page-header">
		<div class="col-xs-6"><h1>Users</h1></div>
		<div class="col-xs-6 text-right">
			<a href="/users/add" class="btn btn-success add-row"><i class="glyphicon glyphicon-plus"></i>&nbsp;&nbsp;&nbsp;Add user</a>
		</div>
	</div>
	
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th style="width: 100px;">#ID</th>
					<th style="width: 250px;">Name</th>
					<th>Email</th>
					<th>Phone</th>
					<th style="width: 125px;">Action</th>
				</tr>
			</thead>
			<tbody>
			<% for(var i=0; i<users.length; i++){%>
				<tr data-id="<%= users[i].id %>">
					<td>#<%= users[i].id %></td>
					<td><%- users[i].image ? '<img src="' + users[i].image + '" class="list-image">' : '' %> <%= users[i].name %> <%= users[i].lastName %></td>
					<td><%= users[i].email %></td>
					<td><%= users[i].phone %></td>
					<td>
						<a href="/users/edit/<%= users[i].id %>" class="btn btn-sm btn-default">Edit</a>
						<button class="btn btn-sm btn-danger remove-row">Delete</button>
					</td>
				</tr>
			<% } %>
			</tbody>
		</table>
	</div>
</div>

<%- include('footer') %>